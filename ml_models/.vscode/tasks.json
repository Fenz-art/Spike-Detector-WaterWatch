{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run FastAPI server",
			"type": "shell",
			"command": "python",
			"args": [
				"-m",
				"uvicorn",
				"BE.main:app",
				"--host",
				"127.0.0.1",
				"--port",
				"8000",
				"--reload"
			],
			"isBackground": true,
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		}
	]
}